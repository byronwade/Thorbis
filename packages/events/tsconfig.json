{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"declaration": true,
		"declarationDir": "./dist/types",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"outDir": "./dist/esm",
		"rootDir": "./src",
		"baseUrl": ".",
		"composite": false,
		"declarationMap": false,
		"sourceMap": true,
		"allowJs": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"tsBuildInfoFile": "./dist/.tsbuildinfo",
		"noEmit": false,
		"emitDeclarationOnly": true,
		"assumeChangesOnlyAffectDirectDependencies": true,
		"importsNotUsedAsValues": "remove",
		"preserveValueImports": false,
		"paths": {
			"@core/*": ["src/lib/analytics/core/*"],
			"@events/*": ["src/lib/analytics/events/*"],
			"@services/*": ["src/lib/analytics/services/*"],
			"@utils/*": ["src/lib/analytics/utils/*"],
			"@types/*": ["src/lib/analytics/types/*"],
			"@constants": ["src/lib/analytics/constants"],
			"@logger": ["src/lib/analytics/utils/logger"]
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.stories.tsx",
		"**/*.d.ts",
		"**/*.test.tsx",
		"**/*.spec.tsx"
	]
}
