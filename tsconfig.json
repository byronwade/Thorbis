{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true, // Skip type checking of declaration files - speeds up builds significantly
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true, // Enables faster builds by ensuring each file can be transpiled independently
		"jsx": "react-jsx",
		"incremental": false, // DISABLED: May cause hangs - disable incremental compilation
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		},
		"strictNullChecks": true,
		// Build performance optimizations
		"assumeChangesOnlyAffectDirectDependencies": false // DISABLED: May cause hangs
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts",
		".next\\dev/types/**/*.ts",
		".next\\dev/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"src/components/schedule/_deprecated",
		"src/components/scheduler/**",
		"scripts",
		".next",
		"dist",
		"build",
		"supabase/functions"
	]
}
