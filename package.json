{
	"name": "stratos-monorepo",
	"version": "0.1.0",
	"private": true,
	"packageManager": "pnpm@9.15.0",
	"engines": {
		"node": ">=20.10.0"
	},
	"scripts": {
		"dev": "turbo dev",
		"dev:web": "turbo dev --filter @stratos/web",
		"dev:admin": "turbo dev --filter @stratos/admin",
		"build": "turbo build",
		"build:web": "turbo build --filter @stratos/web",
		"build:admin": "turbo build --filter @stratos/admin",
		"lint": "turbo lint",
		"typecheck": "turbo typecheck",
		"clean": "turbo clean && rimraf node_modules",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"devDependencies": {
		"knip": "^5.70.2",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"rimraf": "^6.1.0",
		"turbo": "^2.5.4",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"overrides": {
			"@types/react": "19.2.2",
			"@types/react-dom": "19.2.2"
		}
	},
	"dependencies": {
		"@convex-dev/auth": "^0.0.90",
		"convex": "^1.31.0"
	}
}
